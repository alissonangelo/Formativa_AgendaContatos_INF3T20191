<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CadastroActivity"
        android:orientation="vertical"
        android:layout_margin="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/image_view_filme"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/icon_movie_imageview"
                android:background="@color/colorGra"/>

            <Button
                android:id="@+id/btn_foto_camera"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/botao_camera"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="8dp"/>

            <Button
                android:id="@+id/btn_foto_galeria"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/botao_galeria"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@+id/btn_foto_camera"
                android:layout_marginRight="8dp"/>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".CadastroActivity"
            android:orientation="vertical"
            android:layout_margin="24dp">

            <EditText
                android:id="@+id/txt_titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Titulo do filme"
                android:inputType="text"/>

            <EditText
                android:id="@+id/txt_diretor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nome do diretor"
                android:inputType="text"
                android:layout_marginTop="8dp"
                />
            <EditText
                android:id="@+id/txt_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Data de lençamento"
                android:inputType="date"
                android:layout_marginTop="8dp"/>

            <EditText
                android:id="@+id/txt_duracao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Duração do filme"
                android:inputType="time"
                android:layout_marginTop="8dp"/>

            <EditText
                android:id="@+id/txt_genero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Gênero do filme"
                android:inputType="text"
                android:layout_marginTop="8dp"/>

            <RatingBar
                android:id="@+id/nota_filme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:max="10"
                android:numStars="5" />

        </LinearLayout>


    </LinearLayout>
</ScrollView>
